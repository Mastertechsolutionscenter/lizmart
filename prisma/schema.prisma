generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//mpesa payment details 
model StkCallback {
  id                String            @id @default(cuid())
  merchantRequestId String
  checkoutRequestId String
  resultCode        Int
  resultDesc        String
  order             Order[]
  callbackMetadata  CallbackMetadata?

  @@unique([checkoutRequestId])
}

model CallbackMetadata {
  id                 String      @id @default(cuid())
  checkoutRequestId  String
  stkCallback        StkCallback @relation(fields: [checkoutRequestId], references: [checkoutRequestId])
  amount             String?
  mpesaReceiptNumber String?
  transactionDate    DateTime?
  phoneNumber        String?
  resultDesc         String?

  @@unique([checkoutRequestId])
}

model Product {
  id                      String              @id @default(uuid()) @unique // keep string IDs to match app
  handle                  String              @unique
  title                   String
  description             String?
  descriptionHtml         String?
  availableForSale        Boolean             @default(true)
  options                 Json?
  minVariantPriceAmount   Int?                @db.Integer // unchanged
  minVariantPriceCurrency String?
  maxVariantPriceAmount   Int?                @db.Integer // unchanged
  maxVariantPriceCurrency String?
  featuredImage           Image?              @relation("ProductFeaturedImage", fields: [imageId], references: [id])
  featuredImageId         String?
  images                  Image[]             @relation("ProductImages")
  variants                ProductVariant[]
  seo                     SEO?                @relation(fields: [seoId], references: [id])
  seoId                   String?
  tags                    String[]             // kept as string array per your schema
  updatedAt               DateTime?           @updatedAt
  createdAt               DateTime            @default(now())
  imageId                 String?
  CollectionProduct       CollectionProduct[]

  gender                  String              @default("general")
  featured                Boolean  @default(false)
  healthTopics      HealthTopicProduct[]

  @@index([handle])
}

model ProductVariant {
  id               String     @id @default(uuid()) @unique
  product          Product    @relation(fields: [productId], references: [id])
  productId        String
  title            String
  availableForSale Boolean    @default(true)
  // selectedOptions as JSON: [{name, value}, ...]
  selectedOptions  Json?
  // price
  priceAmount      Decimal    @db.Decimal(18, 6)
  priceCurrency    String
  // extra fields that your code might expect
  sku              String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime?  @updatedAt
  CartItem         CartItem[]

  // âœ… Added to link sales directly
  OrderItem        OrderItem[]
}


model Image {
  id         String    @id @default(uuid()) @unique
  url        String
  altText    String?
  width      Int?
  height     Int?
  // relations back to product (featured or collection)
  featuredOf Product[] @relation("ProductFeaturedImage")
  product    Product?  @relation("ProductImages", fields: [productId], references: [id])
  productId  String?
}

model Collection {
  id          String    @id @default(uuid()) @unique
  handle      String    @unique
  title       String
  description String?
  seo         SEO?      @relation(fields: [seoId], references: [id])
  seoId       String?

  // nesting (one-to-many self-relation)
  parentId    String?
  parent      Collection?   @relation("CollectionChildren", fields: [parentId], references: [id])
  children    Collection[]  @relation("CollectionChildren")

  updatedAt   DateTime? @updatedAt
  createdAt   DateTime  @default(now())

  gender      String     @default("general")

  // many-to-many with Product (join table: CollectionProduct)
  products CollectionProduct[]

  @@index([parentId])
}

model CollectionProduct {
  id           String     @id @default(uuid()) @unique
  collection   Collection @relation(fields: [collectionId], references: [id])
  collectionId String
  product      Product    @relation(fields: [productId], references: [id])
  productId    String
  order        Int? // optional ordering

  @@unique([collectionId, productId])
}

// 1. New Model: HealthTopic

model HealthTopic {
  id                String    @id @default(uuid()) @unique

  handle            String    @unique
  // The main title, e.g., "Lung Support"
  title             String
  // The long-form blog/description written by the editor
  description       String
  // An optional HTML version, if you want to pre-render or store both
  descriptionHtml   String?

  seo               SEO?      @relation(fields: [seoId], references: [id])
  seoId             String?
  
 
  relatedProducts   HealthTopicProduct[]

  updatedAt         DateTime? @updatedAt
  createdAt         DateTime  @default(now())

  @@index([handle])
}

// 2. New Join Model: HealthTopicProduct

model HealthTopicProduct {
  id              String        @id @default(uuid()) @unique
  

  healthTopic     HealthTopic   @relation(fields: [healthTopicId], references: [id])
  healthTopicId   String
  
  
  product         Product       @relation(fields: [productId], references: [id])
  productId       String
  
  order           Int?  

  @@unique([healthTopicId, productId])
}

model SEO {
  id          String       @id @default(uuid()) @unique
  title       String?
  description String?
  Product     Product[]
  Collection  Collection[]
  Page        Page[]
  healthTopic HealthTopic[]
}

model Page {
  id          String    @id @default(uuid()) @unique
  title       String
  handle      String    @unique
  body        String?
  bodySummary String?
  seo         SEO?      @relation(fields: [seoId], references: [id])
  seoId       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
}

model Menu {
  id        String    @id @default(uuid()) @unique
  handle    String    @unique
  // store menu items as JSON array: [{ title, url }, ...]
  items     Json
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

model Cart {
  id               String     @id @default(uuid()) @unique
  checkoutUrl      String?
  subtotalAmount   Decimal?   @db.Decimal(18, 6)
  subtotalCurrency String?
  totalAmount      Decimal?   @db.Decimal(18, 6)
  totalCurrency    String?
  totalTaxAmount   Decimal?   @db.Decimal(18, 6)
  taxCurrency      String?
  totalQuantity    Int        @default(0)
  lines            CartItem[]
  createdAt        DateTime   @default(now())
  updatedAt        DateTime?  @updatedAt
  User             User?      @relation(fields: [userId], references: [id])
  userId           String?
}

model CartItem {
  id                  String          @id @default(uuid()) @unique
  cart                Cart            @relation(fields: [cartId], references: [id])
  cartId              String
  variant             ProductVariant? @relation(fields: [variantId], references: [id])
  variantId           String?
  quantity            Int
  // cost for this line (totalAmount & currency)
  totalAmount         Decimal         @db.Decimal(18, 6)
  currency            String
  // snapshot of merchandise title/selected options (to avoid resolve if variant deleted)
  merchandiseSnapshot Json?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime?       @updatedAt
}

/// --- Orders domain (fixed relations, shipping only) ---

model Address {
  id       String  @id @default(uuid()) @unique
  fullName String // recipient's name
  email    String? // contact email for the address
  phone    String // contact phone (mobile preferred)
  county   String // Kenyan county, e.g. "Nairobi", "Kisumu"
  town     String // town / locality / ward
  mpesaNumber   String

  // optional owner user for saved addresses
  user   User?   @relation(fields: [userId], references: [id])
  userId String?

  // Orders that use this address as shipping address
  shippingOrders Order[] @relation("ShippingAddress")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([county])
}

enum OrderStatus {
  PENDING
  PROCESSING
  CONFIRMED
  CANCELLED
  FULFILLED
  SHIPPED
  DELIVERED
  RETURNED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  AUTHORIZED
  CAPTURED
  FAILED
  REFUNDED
}

model Order {
  id             String        @id @default(uuid()) @unique
  orderNumber    String        @unique
  user           User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId         String?
  status         OrderStatus   @default(PENDING)
  paymentStatus  PaymentStatus @default(PENDING)
  currency       String?
  subtotalAmount Decimal?      @db.Decimal(18, 6)
  shippingAmount Decimal?      @db.Decimal(18, 6)
  taxAmount      Decimal?      @db.Decimal(18, 6)
  totalAmount    Decimal?      @db.Decimal(18, 6)
  totalQuantity  Int           @default(0)

  // relations
  items     OrderItem[]
  payments  Payment[]
  shipments Shipment[]

  // only shipping address (billing removed as requested)
  shippingAddress   Address? @relation("ShippingAddress", fields: [shippingAddressId], references: [id])
  shippingAddressId String?

  // immutable / audit fields
  placedAt    DateTime?
  paidAt      DateTime?
  cancelledAt DateTime?
  fulfilledAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
  deliveredAt    DateTime? 

  // flexible metadata
  metadata   Json?
  notes      String?
  archivedAt DateTime?
  stkCallbackId String? // Foreign key referencing Order model
  stkCallback   StkCallback? @relation(fields: [stkCallbackId], references: [checkoutRequestId])

  @@unique([stkCallbackId])

  // indexes
  @@index([userId])
  @@index([orderNumber])
  @@index([createdAt])
  @@index([status])
  @@index([paymentStatus])
  @@index([placedAt])
  @@index([status, createdAt])
  @@index([userId, createdAt])
}

model OrderItem {
  id      String @id @default(uuid()) @unique
  order   Order  @relation(fields: [orderId], references: [id])
  orderId String

  productId String? // kept unconstrained for immutability
  variantId String? // kept unconstrained for immutability

  variant   ProductVariant? @relation(fields: [variantId], references: [id])
  
  productTitle        String?
  variantTitle        String?
  sku                 String?
  selectedOptions     Json?
  quantity            Int
  unitPriceAmount     Decimal   @db.Decimal(18, 6)
  unitPriceCurrency   String
  lineTotalAmount     Decimal   @db.Decimal(18, 6)
  lineTotalCurrency   String
  merchandiseSnapshot Json?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime? @updatedAt

  @@index([orderId])
}

model Payment {
  id                String        @id @default(uuid()) @unique
  order             Order         @relation(fields: [orderId], references: [id])
  orderId           String
  provider          String
  providerPaymentId String?
  method            String?
  amount            Decimal       @db.Decimal(18, 6)
  currency          String
  status            PaymentStatus @default(PENDING)
  capturedAt        DateTime?
  refundedAmount    Decimal?      @db.Decimal(18, 6)
  rawResponse       Json?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime?     @updatedAt
  // Optionally: @@unique([provider, providerPaymentId]) if providerPaymentId is guaranteed unique

  @@index([orderId])
  @@index([provider, providerPaymentId])
}

model Shipment {
  id              String    @id @default(uuid()) @unique
  order           Order     @relation(fields: [orderId], references: [id])
  orderId         String
  carrier         String?
  service         String?
  trackingNumber  String?
  costAmount      Decimal?  @db.Decimal(18, 6)
  costCurrency    String?
  status          String?
  shippedAt       DateTime?
  deliveredAt     DateTime?
  trackingEvents  Json?
  shipmentAddress Json?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime? @updatedAt

  @@index([orderId])
  @@index([trackingNumber])
}

//authentication

enum UserRole {
  ADMIN
  USER
  BUYER
}

enum Allowed {
  YES
  NO
}

model User {
  id                    String                 @id @default(cuid())
  name                  String?
  email                 String?                @unique
  emailVerified         DateTime?
  image                 String?
  password              String?
  role                  UserRole               @default(USER)
  allowed               Allowed                @default(NO)
  carts                 Cart[]
  addresses             Address[]
  orders                Order[] // <-- add this opposite relation
  accounts              Account[]
  isTwoFactorEnabled    Boolean                @default(false)
  twoFactorConfirmation TwoFactorConfirmation?
  createdAt             DateTime?              @default(now())
  updatedAt             DateTime?              @updatedAt
  Session               Session[]
}

model Account {
  id                String    @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?   @db.Text
  access_token      String?   @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?   @db.Text
  session_state     String?
  createdAt         DateTime? @default(now())
  updatedAt         DateTime? @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorConfirmation {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
